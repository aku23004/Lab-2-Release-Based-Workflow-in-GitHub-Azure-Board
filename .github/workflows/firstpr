name: Congratulate first pull request

on:
  pull_request:
    types:
      - opened

jobs:
  congratulate:
    runs-on: ubuntu-latest
    permissions:
      pull-requests: write

    steps:
      - name: Check if this is the first pull request by the actor
        id: check_first_pr
        uses: actions/github-script@v6
        with:
          script: |
            const { data: pulls } = await github.rest.pulls.list({
              owner: context.repo.owner,
              repo: context.repo.repo,
              state: "all"
            });

            const userPulls = pulls.filter(pr => pr.user.login === context.actor);
            const isFirst = userPulls.length === 1;

            core.setOutput("is_first", isFirst);
      
      - name: Comment on first pull request
        if: steps.check_first_pr.outputs.is_first == 'true'
        uses: peter-evans/create-or-update-comment@v2
        with:
          issue-number: ${{ github.event.pull_request.number }}
          body: |
            Congratulations on opening your first pull request!
